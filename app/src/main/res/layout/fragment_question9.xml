<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question9Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_question9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="100dp"
            android:text="Qual o valor aproximado do seu patrimônio?"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rd_group_q9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_question9">

            <RadioButton
                android:id="@+id/rd_q9_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Até R$ 10.000" />

            <RadioButton
                android:id="@+id/rd_q9_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De R$ 10.001 até R$ 100.000" />

            <RadioButton
                android:id="@+id/rd_q9_btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De R$ 100.001 até R$ 500.000" />

            <RadioButton
                android:id="@+id/rd_q9_btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De R$ 500.001 até R$ 1.000.000" />

            <RadioButton
                android:id="@+id/rd_q9_btn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acima de R$ 1.000.001 " />

        </RadioGroup>

        <Button
            android:id="@+id/btn_avancar_q9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="100dp"
            android:text="Próxima"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>