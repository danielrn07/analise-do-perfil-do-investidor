<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question8Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_question8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="100dp"
            android:text="Qual sua faixa de renda mensal média?"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rd_group_q8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_question8">

            <RadioButton
                android:id="@+id/rd_q8_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Até R$ 1.000" />

            <RadioButton
                android:id="@+id/rd_q8_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De R$ 1.001 até R$ 5.000" />

            <RadioButton
                android:id="@+id/rd_q8_btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De R$ 5.001 até R$ 10.000" />

            <RadioButton
                android:id="@+id/rd_q8_btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acima de R$ 10.000" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_avancar_q8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="100dp"
            android:text="Próxima"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>