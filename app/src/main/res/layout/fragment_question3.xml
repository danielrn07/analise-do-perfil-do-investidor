<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question3Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_question3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="100dp"
            android:text=" Qual das alternativas melhor classifica sua formação e experiência com
 o mercado financeiro?"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rd_group_q3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_question3">

            <RadioButton
                android:id="@+id/rd_q3_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Não possuo formação acadêmica ou conhecimento do mercado financeiro" />

            <RadioButton
                android:id="@+id/rd_q3_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Possuo formação acadêmica na área financeira, mas não tenho experiência
com o mercado financeiro" />

            <RadioButton
                android:id="@+id/rd_q3_btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aumento do capital acima da taxa de retorno média do mercado, mesmo
que isso implique assumir riscos de perdas elevadas
" />

            <RadioButton
                android:id="@+id/rd_q3_btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Possuo formação acadêmica na área financeira ou pleno conhecimento do
mercado financeiro" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_avancar_q3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="100dp"
            android:text="Próxima"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>