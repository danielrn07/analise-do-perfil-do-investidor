<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_custom_dialog">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_credit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="16dp"
        android:text="Créditos"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="#0b1c2c"
        android:background="@drawable/bg_custom_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_credito"
        />

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginHorizontal="32dp"
        android:lineSpacingExtra="4dp"
        android:text="Projeto desenvolvido por Daniel Nascimento\n Análise e Desenvolvimento de Sistemas - Instituto Infnet"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_credito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:lineSpacingExtra="4dp"
        android:text="Crédito para o Banco Paulista:"
        android:textSize="12sp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_github" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_linkedin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:text="Linkedin"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="#2867b2"
        android:background="@drawable/bg_custom_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_github"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:text="GitHub"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="#171515"
        android:background="@drawable/bg_custom_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_linkedin"
        app:layout_goneMarginTop="32dp" />


</androidx.constraintlayout.widget.ConstraintLayout>